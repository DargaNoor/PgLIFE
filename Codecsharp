<configuration>
  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding name="SecureBinding">
          <security mode="TransportWithMessageCredential">
            <message clientCredentialType="UserName" />
          </security>
        </binding>
      </basicHttpBinding>
    </bindings>
    <client>
      <endpoint address="https://your-service-url"
                binding="basicHttpBinding"
                bindingConfiguration="SecureBinding"
                contract="YourService.IYourService"
                name="SecureServiceEndpoint">
      </endpoint>
    </client>
  </system.serviceModel>
</configuration>







using System;
using System.ServiceModel;

namespace YourNamespace
{
    class Program
    {
        static void Main(string[] args)
        {
            // Create a client proxy for the service
            var client = new YourServiceClient("SecureServiceEndpoint");

            // Set the username and password for WS-Security
            client.ClientCredentials.UserName.UserName = "your-username";
            client.ClientCredentials.UserName.Password = "your-password";

            // Call a method on the service
            var response = client.YourServiceMethod();

            // Process the response
            Console.WriteLine(response);
        }
    }

    // The service client, generated by adding a Service Reference in Visual Studio
    public partial class YourServiceClient : ClientBase<IYourService>, IYourService
    {
        public YourServiceClient(string endpointConfigurationName) : base(endpointConfigurationName) { }

        public YourServiceMethodResponse YourServiceMethod(YourServiceMethodRequest request)
        {
            return base.Channel.YourServiceMethod(request);
        }
    }

    [ServiceContract]
    public interface IYourService
    {
        [OperationContract]
        YourServiceMethodResponse YourServiceMethod(YourServiceMethodRequest request);
    }

    // Define your request and response types
    public class YourServiceMethodRequest
    {
        // Request fields
    }

    public class YourServiceMethodResponse
    {
        // Response fields
    }
}
